<h1 align="center">
  <% if current_user.user_type == "Developer" %>
    Resolve Bug
  <% elsif current_user.user_type == "QA" %>
    Edit Bug
  <% end %>
</h1>

<div class="col-md-4 col-xs-4 col-xs-offset-4 col-md-offset-4">
  <%= form_for(@bug,:url => project_bug_path, :html => {class: "form-vertical", role: "form",multipart: true} ) do |f| %>
  <%= render 'layouts/error', {obj: @bug} %>
    <% if current_user.user_type == "QA" %>
     <div class="form-group">
      <div class="control-label">
        <%= f.label :title %>
      </div>
        <%= f.text_field :title, class: "form-control", placeholder: "Enter Title", autofocus: true, autocomplete: "title" %>   
    </div>

    <div class="form-group">
      <div class="control-label">
        <%= f.label :description %>
      </div>
        <%= f.text_field :description, class: "form-control", placeholder: "Enter description", autofocus: true, autocomplete: "description" %>
    </div>
    
    <div class="form-group">
       <div class="control-label">
        <%= f.label :type %>
    </div>
     
      <%= f.select :type ,options_for_select([["Select One", ""], "Features", "Bug"],@bug.type), { :include_blank => false },  {:class => 'form-control'} %>
    </div>

    <div class="form-group">
      <div class="control-label">
        <%= f.label :status %>
      </div>
     
      <%= f.select :status, options_for_select([["Select One", ""], "New", "Started", "Completed","Resolved"],@bug.status), { :include_blank => false },  {:class => 'form-control'} %>
     
    </div>

    <div class="form-group">
      <div class="control-label">
        <%= f.label :deadline %>
      </div>
     
      <%= f.text_field :deadline, class: 'form-control',"data-provide" => "datepicker" ,"data-date-start-date"=>"-0d" %>
     
    </div>

    <div class="form-group">
      <div class="control-label">
        <%= f.label :image_path %>
      </div>
        <%= f.file_field :image_path %>
        <% if f.object.image_path? %>
      <%= image_tag f.object.image_path.url ,size: 100%>
      <%= f.label :remove_image %>
      <%= f.check_box :remove_image_path %> 
    <% end %>
      </div> 
       <% elsif current_user.user_type == "Developer" %> 
       <div class="form-group">
      <div class="control-label">
        <%= f.label :status %>
      </div>
     
      <%= f.select :status, options_for_select([["Select One", ""], "New", "Started", "Completed","Resolved"],@bug.status), { :include_blank => false },  {:class => 'form-control'} %>
     
    </div>
    <% end %>

    <div class="form-group">
      <%= f.submit(@bug.new_record? ? "Create" : "Update", class: 'btn btn-primary btn-lg') %>
    </div>
  <% end %>
</div>