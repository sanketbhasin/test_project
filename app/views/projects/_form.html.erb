
<div class="col-md-4 col-xs-4 col-xs-offset-4 col-md-offset-4">
  <%= form_for(@project, :html => {class: "form-vertical", role: "form"} ) do |f| %>
    
     <div class="form-group">
      <div class="control-label">
        <%= f.label :title %>
      </div>
        <%= f.text_field :title, class: "form-control", placeholder: "Enter Title", autofocus: true, autocomplete: "title" %>   
    </div>

    <div class="form-group">
      <div class="control-label">
        <%= f.label :description %>
      </div>
        <%= f.text_field :description, class: "form-control", placeholder: "Enter description", autofocus: true, autocomplete: "description" %>
    </div>
  
    <div class="form-group">
      <%= f.submit(@project.new_record? ? "Create" : "Update", class: 'btn btn-primary btn-lg') %>
    </div>
  <% end %>
</div>