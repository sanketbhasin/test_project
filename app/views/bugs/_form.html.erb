<div class="col-md-4 col-xs-4 col-xs-offset-4 col-md-offset-4">
  <%= form_for(@bug,:url => project_bugs_path, :html => {class: "form-vertical", role: "form"} ) do |f| %>
  <%= render 'layouts/error', {obj: @bug} %>
    <div class="form-group">
      <div class="control-label">
        <%= f.label :title %>
      </div>
      <%= f.text_field :title, class: "form-control", placeholder: "Enter Title", autofocus: true, autocomplete: "title" %>   
    </div>

    <div class="form-group">
      <div class="control-label">
        <%= f.label :description %>
      </div>
        <%= f.text_field :description, class: "form-control", placeholder: "Enter description", autofocus: true, autocomplete: "description" %>
    </div>
    
    <div class="form-group">
      <div class="control-label">
        <%= f.label :type %>
      </div>
      <%= f.select :type, options_for_select([["Select One", ""], "Features", "Bug"]), { :include_blank => false },  {:class => 'form-control'} %>
    </div>

    <div class="form-group">
     <div class="control-label">
       <%= f.label :status %>
     </div>
     <%= f.select :status, options_for_select([["Select One", ""], "New", "Started", "Completed","Resolved"]), { :include_blank => false },  {:class => 'form-control'} %>
    </div>

    <div class="form-group">
      <div class="control-label">
        <%= f.label :deadline %>
      </div>
      <%= f.text_field :deadline, class: 'form-control',"data-provide" => "datepicker"  %>
    </div>
    
    <div class="form-group">
      <%= f.submit(@bug.new_record? ? "Create" : "Update", class: 'btn btn-primary btn-lg') %>
    </div>
  <% end %>
</div>